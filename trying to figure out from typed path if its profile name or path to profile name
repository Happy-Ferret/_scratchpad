var tp = 'C:\\rawr\\rawr\\my new profile' //var typedPath
var tpSplit = OS.Path.split(tp); //var typedPathSplit
console.info('tpSplit:', tpSplit);
var IsAbsolute = 'winIsAbsolute' in OS.Path ? tpSplit.winDrive ? true : false : tpSplit.absolute;
if (tpSplit.components.length == 1) {
  var IsRelative = 1;
} else if (tpSplit.components.length > 1) {
  if (IsAbsolute) {
    var IsRelative = 0;
  } else {
    Services.prompt.alert(null, self.name + ' - ' + 'ERROR', 'You have path seperators in your path. If you want to use path seperators you must provide a full path to create. Such as "C:\blah\my profile" this will make a profile named "my profile" and it will be located in a folder called "my profile" in "blah" in "C:\"');
  }
} else {
  //tpSplit.compoents.length == 0
  Services.prompt.alert(null, self.name + ' - ' + 'ERROR', 'probably blank tp');
}


Services.prompt.alert(null, 'kind of prof', IsRelative + '\n\n' + uneval(tpSplit) + '\n\nIsAbsolute:' + IsAbsolute)